{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Attach",
            "type": "python",
            "request": "attach",            
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/work"
                }
            ],
            "port": 5678,
            "host": "127.0.0.1"
        }
    ]
}